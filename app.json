{
  "expo": {
    "name": "ToadReader",
    "description": "Launch a custom eReader for your organization.",
    "slug": "toad-reader",
    "privacy": "public",
    "sdkVersion": "25.0.0",
    "version": "2.0.1",
    "orientation": "default",
    "primaryColor": "#232222",
    "icon": "./assets/icons/logo.png",
    "notification": {
      "icon": "./assets/icons/sm_bw.png",
      "color": "#232222"
    },
    "androidStatusBar": {
      "backgroundColor": "#ffffff",
      "barStyle": "dark-content"
    },
    "scheme": "toad",
    "packagerOpts": {
      "assetExts": ["ttf", "mp4"],
      "config": "rn-cli.config.js"
    },
    "assetBundlePatterns": [
      "node_modules/native-base/Fonts/Roboto.ttf",  
      "node_modules/native-base/Fonts/Roboto_medium.ttf",
      "node_modules/native-base/Fonts/Ionicons.ttf",
      "assets/images/**"
    ],
    "splash": {
      "backgroundColor": "#FFFFFF",
      "resizeMode": "cover",
      "image": "./assets/icons/splash-tablet.png"
    },
    "ios": {
      "bundleIdentifier": "com.toadreader.demo",
      "buildNumber": "2.0.1",
      "icon": "./assets/icons/logo_ios.png",
      "loadJSInBackgroundExperimental": true,
      "supportsTablet": true
    },
    "android": {
      "package": "com.toadreader.demo",
      "versionCode": 1
    },
    "extra": {
      "READER_VERSION_TIMESTAMP": "1526305184",
      "APP_BACKGROUND_COLOR": "#e9e9ef",
      "ANDROID_TOOLBAR_COLOR": "#3a3937",
      "ANDROID_STATUS_BAR_COLOR": "#232222",
      "LIBRARY_MAXIMUM_BOOK_COVER_WIDTH": 100,
      "PAGE_LIST_MAXIMUM_PAGE_SIZE": 150,
      "PAGE_LIST_HEADER_ROW_HEIGHT": 40,
      "PAGES_HORIZONTAL_MARGIN": 10,
      "PAGES_VERTICAL_MARGIN": 10,
      "CURRENT_PAGE_BORDER_COLOR": "#3a3937",
      "CURRENT_PAGE_BORDER_WIDTH": 2,
      "PAGE_ZOOM_MILLISECONDS": 400,
      "PROGRESS_BAR_SIDE_SPACING": 20,
      "INITIAL_SPINE_CAPTURE_TIMEOUT": 10000,
      "MAX_SPINE_CAPTURE_TIMEOUT": 30000,
      "REMOVE_ICON_COLOR": "#fa213b",
      "SPINNER_COLOR": "#3a3937",
      "IDPS": {
        "1": {
          "idpName": "ToadReader",
          "domain": "demo.toadreader.com",
          "idpExpire": null
        }
      },
      "REQUEST_OPTIONS": {
        "headers": {
          "App-Request": "true"
        }
      }
    }
  }
}
