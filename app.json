{
  "expo": {
    "name": "BibleMesh",
    "description": "An eReader for BibleMeshâ€™s trusted theological resources.",
    "slug": "biblemesh-ereader",
    "privacy": "unlisted",
    "sdkVersion": "25.0.0",
    "version": "2.0.1",
    "orientation": "default",
    "primaryColor": "#dfe7f1",
    "icon": "./assets/icons/biblemesh_reader_logo.png",
    "notification": {
      "icon": "./assets/icons/biblemesh_sm_bw.png",
      "color": "#2c5b8e"
    },
    "androidStatusBar": {
      "backgroundColor": "#ffffff",
      "barStyle": "dark-content"
    },
    "scheme": "biblemesh",
    "packagerOpts": {
      "assetExts": ["ttf", "mp4"],
      "config": "rn-cli.config.js"
    },
    "assetBundlePatterns": [
      "node_modules/native-base/Fonts/Roboto.ttf",  
      "node_modules/native-base/Fonts/Roboto_medium.ttf",
      "node_modules/native-base/Fonts/Ionicons.ttf",
      "assets/images/**"
    ],
    "splash": {
      "backgroundColor": "#FFFFFF",
      "resizeMode": "cover",
      "image": "./assets/icons/splash-tablet.png"
    },
    "ios": {
      "bundleIdentifier": "com.biblemesh.ereader",
      "buildNumber": "2.0.1",
      "icon": "./assets/icons/biblemesh_reader_logo_ios.png",
      "loadJSInBackgroundExperimental": true,
      "supportsTablet": true
    },
    "android": {
      "package": "com.biblemesh.read",
      "versionCode": 26
    },
    "extra": {
      "READER_VERSION_TIMESTAMP": "1525591048",
      "APP_BACKGROUND_COLOR": "#e9e9ef",
      "ANDROID_TOOLBAR_COLOR": "#4075ae",
      "ANDROID_STATUS_BAR_COLOR": "#2c5b8e",
      "LIBRARY_MAXIMUM_BOOK_COVER_WIDTH": 100,
      "PAGE_LIST_MAXIMUM_PAGE_SIZE": 150,
      "PAGE_LIST_HEADER_ROW_HEIGHT": 40,
      "PAGES_HORIZONTAL_MARGIN": 10,
      "PAGES_VERTICAL_MARGIN": 10,
      "CURRENT_PAGE_BORDER_COLOR": "#4075ae",
      "CURRENT_PAGE_BORDER_WIDTH": 2,
      "PAGE_ZOOM_MILLISECONDS": 400,
      "PROGRESS_BAR_SIDE_SPACING": 20,
      "INITIAL_SPINE_CAPTURE_TIMEOUT": 10000,
      "MAX_SPINE_CAPTURE_TIMEOUT": 30000,
      "REMOVE_ICON_COLOR": "#fa213b",
      "SPINNER_COLOR": "#4075ae",
      "IDPS": {
        "2": {
          "idpName": "BibleMesh",
          "domain": "read.biblemesh.com",
          "idpExpire": null
        }
      },
      "REQUEST_OPTIONS": {
        "headers": {
          "App-Request": "true"
        }
      }
    }
  }
}
